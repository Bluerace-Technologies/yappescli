{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "eqeqeq": "off",
        "no-plusplus": ["off", { "allowForLoopAfterthoughts": true }],
        "consistent-return": "off",
        "no-prototype-builtins": "off",
        "no-shadow": ["error", { "allow": ["done","cb","callback","resolve","reject","data","err","updateBusinessLogicData"] }],
        "no-unused-vars": "off",
        "func-names": "off",
        "no-param-reassign": "off",
        "camelcase": ["error", {"allow": ["error_code","url_parts"]}],
        "max-len": ["error", { "code": 180 }],
        "import/no-dynamic-require": "off"
    }
}